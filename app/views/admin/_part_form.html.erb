  <%= form_for @part, remote: true, html: { multipart: true}, role: "form" do |f| %>
  
    <div class ="form-group container">

      <%= f.label :description %>
      <%= f.text_field :description, :class => 'form-control' %>

      <br>
      <%= f.label :image %>
      <%= f.file_field :image, :class => 'btn form-control' %>
      <br>
      <%= f.label :category %><br>
      <%= f.text_field :category, list: "categories_autocomplete", required: true %>
      <datalist id="categories_autocomplete">
        <%= @categories.each do |category| %>
          <option value="<%= category.name %>">
        <% end %>
      </datalist>
      <br>
      <%= f.label :price %>
      <%= f.number_field :price, :class => 'form-control' %>
      <br>
      <div class = 'text-center'>
        <%= f.submit nil, :class => 'btn btn-primary'  %>
      </div>
    </div>


  <% end %>
