<div class="centerBlock text-center">
  <%= form_for @user do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, required: true %>
    </div>
    <h4>(If you would like us to contact you by phone, please enter
      your number below)</h4>
    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone %>
    </div>
    <h4>(Please enter the best Day/Time to contact you by phone)</h4>
    <div class="field">
      <%= f.label :contact_time %>
      <%= f.text_field :contact_time %>
    </div>
      <%= f.submit nil, :class => 'btn btn-success'  %>
  <% end %> 
</div>