<div class="centerBlock text-center">
  <h3>Contact Us for More Info</h3>

  <%= simple_form_for @contact, :html => {:class => ''} do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, :required => true %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, :required => true %>
    </div>
    <div class="field">
      <%= f.label :number %><br />
      <%= f.text_field :number, type: 'tel', required: true, value: 'XXX-XXX-XXXX' %>
    </div>
    <div class="field">
      <%= f.label :message %><br />
      <%= f.text_area :message, :as => :text, :required => true %>
    </div>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div class="actions">
      </br>
      <%= f.button :submit, 'Send Message', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>